{
  "name": "@spaceflow/review",
  "version": "0.60.0",
  "description": "Spaceflow 代码审查插件，使用 LLM 对 PR 代码进行自动审查",
  "license": "MIT",
  "author": "Lydanne",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lydanne/spaceflow.git",
    "directory": "extensions/review"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "spaceflow build",
    "dev": "spaceflow dev",
    "test": "vitest run",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@spaceflow/cli": "workspace:*",
    "@swc/core": "catalog:",
    "@types/micromatch": "^4.0.9",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "unplugin-swc": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@spaceflow/core": "workspace:*"
  },
  "spaceflow": {
    "type": "flow",
    "entry": "."
  }
}
