{
  "name": "@spaceflow/cli",
  "version": "0.30.0",
  "description": "Spaceflow CLI 工具",
  "license": "MIT",
  "author": "Lydanne",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lydanne/spaceflow.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "bin": {
    "space": "dist/cli.js",
    "spaceflow": "dist/cli.js"
  },
