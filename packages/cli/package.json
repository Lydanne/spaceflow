  "dependencies": {
    "@spaceflow/shared": "workspace:*"
  },
  "devDependencies": {
    "@rspack/cli": "^1.7.4",
    "@rspack/core": "^1.7.4",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "ts-node": "catalog:",
    "tsconfig-paths": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  }
